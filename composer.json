{
	"name": "thepercival/fctoernooi-api",
	"description": "An api for tournament-apps",
	"keywords": ["sport toernooi"],
	"homepage": "http://github.com/thepercival/fctoernooi-api",
	"license": "MIT",
	"authors": [
        	{
            		"name": "Coen Dunnink",
            		"email": "fctoernooi2018@gmail.com",
            		"homepage": "https://www.fctoernooi.nl/"
        	}
    	],
	"require": {
		"thepercival/voetbal": "dev-master",
		"php": "^7.3",
		"vlucas/phpdotenv": "^4.1",
		"slim/slim": "^4.3",
		"slim/php-view": "^2.2",
		"monolog/monolog": "^2.0",
		"doctrine/orm": "^2.7",
		"jms/serializer": "^3.4",
		"tuupola/base62": "^2.0",
		"tuupola/cors-middleware": "^1.1",
		"tuupola/slim-basic-auth": "^3.2",
		"tuupola/slim-jwt-auth": "^3.4",
		"crell/api-problem": "^3.2",
		"gofabian/negotiation-middleware": "^0.1.3",
		"symfony/property-access": "^5.0",
		"phpmailer/phpmailer": "^6.1",
		"zf1/zend-pdf": "^1.12",
		"endroid/qr-code": "^3.7",
		"phpoffice/phpspreadsheet": "^1.10",
		"php-di/php-di": "^6.0",
		"symfony/yaml": "^5.0",
		"middlewares/negotiation": "^2.0"
	},
	"require-dev": {
		"phpunit/phpunit": "^8.2",
		"phpstan/phpstan": "^0.12",
		"phpstan/phpstan-doctrine": "^0.12",
		"phpstan/extension-installer": "^1.0"
	},
	"autoload": {
		"psr-4": {
			"FCToernooi\\": "domain/",
			"App\\": "app/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"FCToernooiTest\\": "tests/cases"
		}
	},
	"scripts": {
		"start": "php -S localhost:2998 -t public/",
		"test": [
			"vendor/bin/phpunit --bootstrap vendor/autoload.php tests/cases/"
		],
        "stan": "vendor/bin/phpstan analyse --level=2 app domain tests",
		"doctrine-try": "vendor/bin/doctrine orm:schema-tool:update --dump-sql",
		"doctrine-update": "vendor/bin/doctrine orm:schema-tool:update --force"
	},
	"config": {
		"process-timeout":0
	},
	"extra": {
		"phpstan": {
			"includes": [
				"extension.neon"
			]
		}
	}
}
