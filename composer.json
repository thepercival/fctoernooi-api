{
  "name": "thepercival/fctoernooi-api",
  "description": "An api for tournament-apps",
  "keywords": [
    "sport toernooi"
  ],
  "homepage": "http://github.com/thepercival/fctoernooi-api",
  "license": "MIT",
  "authors": [
    {
      "name": "Coen Dunnink",
      "email": "fctoernooi2018@gmail.com",
      "homepage": "https://fctoernooi.nl/"
    }
  ],
  "require": {
    "php": "^7.3",
    "ext-gd": "*",
    "doctrine/orm": "^2.7",
    "doctrine/persistence": "^1.3",
    "endroid/qr-code": "^3.7",
    "jms/serializer": "^3.7",
    "middlewares/negotiation": "^2.0",
    "monolog/monolog": "^2.0",
    "phpmailer/phpmailer": "^6.1",
    "phpoffice/phpspreadsheet": "^1.10",
    "php-di/php-di": "^6.0",
    "selective/config": "^0.1.1",
    "slim/psr7": "^1.1",
    "slim/slim": "^4.3",
    "slim/php-view": "^2.2",
    "symfony/yaml": "^5.0",
    "symfony/property-access": "^5.0",
    "symfony/console": "^5.0",
    "thepercival/voetbal": "^1.0",
    "tuupola/base62": "^2.0",
    "tuupola/slim-basic-auth": "^3.2",
    "tuupola/slim-jwt-auth": "^3.4",
    "vlucas/phpdotenv": "^4.1",
    "zf1s/zend-pdf": "^1.13"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^2.16",
    "phpstan/phpstan": "^0.12",
    "phpstan/phpstan-doctrine": "^0.12",
    "phpstan/extension-installer": "^1.0",
    "phpstan/phpstan-strict-rules": "^0.12.2",
    "phpunit/phpunit": "^8.2"
  },
  "autoload": {
    "psr-4": {
      "FCToernooi\\": "domain/",
      "App\\": "app/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "FCToernooiTest\\": "tests/cases"
    }
  },
  "scripts": {
    "start": "php -S localhost:2998 -t public/",
    "test": [
      "vendor/bin/phpunit --configuration tests/phpunit.xml tests/cases/"
    ],
    "stan": "vendor/bin/phpstan analyse --level=5 app config domain tests",
    "doctrine-try": "vendor/bin/doctrine orm:schema-tool:update --dump-sql",
    "doctrine-update": "vendor/bin/doctrine orm:schema-tool:update --force",
    "cs-fix": "php-cs-fixer fix ."
  },
  "config": {
    "process-timeout": 0
  },
  "extra": {
    "phpstan": {
      "includes": [
        "extension.neon"
      ]
    }
  }
}
