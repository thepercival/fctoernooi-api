{% extends "layout.html" %}

{% block body %}

    <p class="text-gray-700"
       style="line-height: 24px; font-size: 16px; color: #4a5568; width: 100%; margin-bottom: 24px; margin-top: 0px;"
       align="left">
        Hallo,
    </p>

    <p class="text-gray-700" style="line-height: 24px; font-size: 16px; color: #4a5568; width: 100%; margin: 0;"
       align="left">
        Je bent uitgenodigd op {{ url }} voor toernooi "{{ tournamentName }}" door de beheerder van dit toernooi.
    </p>

    <p class="text-gray-700"
       style="line-height: 24px; font-size: 16px; color: #4a5568; width: 100%; margin-top: 24px;" align="left">
        Je hebt voor de volgende toernooien rollen gekregen:
    </p>

    {% embed "tournamentrolestable.twig" %}
    {% endembed %}

    <p class="text-gray-700"
       style="line-height: 24px; font-size: 16px; color: #4a5568; width: 100%; margin-top: 24px; margin-bottom: 0px"
       align="left">
        Wanneer je <a href="{{ url }}user/login">inlogt</a> op {{ url }} staat toernooi "{{ tournamentName }}"
        bij "mijn toernooien".
    </p>


    <p class="text-gray-700"
       style="line-height: 24px; font-size: 16px; color: #4a5568; width: 100%; margin-top: 24px; margin-bottom: 0px"
       align="left">
        met vriendelijke groet,
        <br>
        FCToernooi
    </p>

{% endblock %}